@model IEnumerable<DeTodito.Models.Producto>

@{
    ViewData["Title"] = "Carrito";
}

<h1>Carrito</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    Imagen
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <img src="@item.RutaImagen" class="rounded-circle" height="50px"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Carrito" asp-controller="Home" asp-route-idproducto="@item.IdProducto">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Pedidos" asp-controller="Home">
        Realizar pedido
    </a>
}
else
{
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Tu Carrito está Vacío :(</h1>
        <p class="lead">Por Favor regresa a buscar tus productos para cargarlo</p>
        <a class="btn btn-warning" asp-action="Index" asp-controller="Home">Atrás</a>
    </div>
</div>
}
